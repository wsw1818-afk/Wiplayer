<Window x:Class="Wiplayer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        Background="{StaticResource BackgroundDarkBrush}"
        WindowStyle="SingleBorderWindow"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver"
        PreviewKeyDown="Window_PreviewKeyDown"
        MouseMove="Window_MouseMove"
        MouseDoubleClick="Window_MouseDoubleClick">

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 비디오 영역 컨테이너 -->
        <Grid x:Name="VideoContainer" Grid.Row="0">

            <!-- 단일 뷰 모드 (MultiViewCount == 1) -->
            <Grid x:Name="SingleViewArea"
                  Visibility="{Binding MultiViewCount, Converter={StaticResource MultiViewCountToVisibilityConverter}, ConverterParameter=1}">
                <!-- 메인 플레이어 비디오 영역 -->
                <Grid x:Name="VideoArea" Background="Black">
                    <!-- 비디오 프레임 -->
                    <Image x:Name="VideoImage"
                           Source="{Binding VideoFrame}"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <RotateTransform Angle="{Binding RotationAngle}"/>
                        </Image.RenderTransform>
                    </Image>

                    <!-- 자막 오버레이 -->
                    <Grid VerticalAlignment="Bottom" Margin="20,0,20,60">
                        <TextBlock Text="{Binding SubtitleText}"
                                   Style="{StaticResource SubtitleText}"
                                   Visibility="{Binding SubtitleText, Converter={StaticResource NullToVisibilityConverter}}"/>
                    </Grid>

                    <!-- 파일 없을 때 안내 -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding HasMedia, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="64"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="파일을 드래그하거나 Ctrl+O로 열기"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="16" Margin="0,16,0,0"/>
                        <TextBlock Text="Ctrl+2: 2분할 / Ctrl+4: 4분할"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="12" Margin="0,8,0,0" Opacity="0.7"/>
                    </StackPanel>

                    <!-- 로딩 인디케이터 -->
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4"
                                 VerticalAlignment="Center"
                                 Visibility="{Binding State, Converter={StaticResource LoadingVisibilityConverter}}"/>

                    <!-- 재생/일시정지 큰 아이콘 -->
                    <Border x:Name="PlayPauseOverlay" Background="#66000000"
                            CornerRadius="50" Width="100" Height="100"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Opacity="0" IsHitTestVisible="False">
                        <TextBlock x:Name="PlayPauseIcon" Text="&#xE768;"
                                   FontFamily="Segoe MDL2 Assets" FontSize="48"
                                   Foreground="White"
                                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Grid>

            <!-- 2분할 뷰 모드 (MultiViewCount == 2) -->
            <Grid x:Name="DualViewArea"
                  Visibility="{Binding MultiViewCount, Converter={StaticResource MultiViewCountToVisibilityConverter}, ConverterParameter=2}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                </Grid.ColumnDefinitions>

                <!-- 왼쪽 플레이어 -->
                <Border Grid.Column="0" Background="Black"
                        BorderThickness="2"
                        BorderBrush="{Binding Players[0].IsSelected, Converter={StaticResource BoolToBorderBrushConverter}}"
                        PreviewMouseLeftButtonDown="PlayerPanel_MouseDown"
                        AllowDrop="True" Drop="PlayerPanel_Drop" DragOver="PlayerPanel_DragOver"
                        Tag="0">
                    <Grid>
                        <Image Source="{Binding Players[0].VideoFrame}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="1" FontSize="24" Foreground="#80FFFFFF" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        <!-- 개별 컨트롤 바 (호버 시 표시) -->
                        <Border Style="{StaticResource MultiViewControlBarStyle}"
                                Visibility="{Binding Players[0].HasMedia, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid Style="{StaticResource MultiViewControlBarContentStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <!-- 시크바 -->
                                <Slider Grid.Row="0" Style="{StaticResource MiniSeekBarStyle}"
                                        Minimum="0" Maximum="100"
                                        Value="{Binding Players[0].SeekPosition, Mode=TwoWay}"
                                        IsMoveToPointEnabled="True"
                                        Margin="0,0,0,2"/>
                                <!-- 컨트롤 버튼 행 -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <!-- 5초 뒤로 -->
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[0].SeekRelativeCommand}" CommandParameter="-5"
                                                Content="&#xED3C;" ToolTip="-5초"/>
                                        <!-- 재생/일시정지 -->
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[0].PlayPauseCommand}"
                                                Content="{Binding Players[0].IsPlaying, Converter={StaticResource PlayPauseIconConverter}}"/>
                                        <!-- 정지 -->
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[0].StopCommand}"
                                                Content="&#xE71A;" ToolTip="정지"/>
                                        <!-- 5초 앞으로 -->
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[0].SeekRelativeCommand}" CommandParameter="5"
                                                Content="&#xED3D;" ToolTip="+5초"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Foreground="White" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Run Text="{Binding Players[0].PositionText}"/><Run Text=" / "/><Run Text="{Binding Players[0].DurationText}"/>
                                    </TextBlock>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[0].ToggleMuteCommand}"
                                                Content="{Binding Players[0].IsMuted, Converter={StaticResource VolumeIconConverter}}"/>
                                        <Slider Style="{StaticResource MiniVolumeSliderStyle}"
                                                Minimum="0" Maximum="100"
                                                Value="{Binding Players[0].Volume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                IsMoveToPointEnabled="True"
                                                Width="60" VerticalAlignment="Center"/>
                                        <!-- 단일뷰로 전환 -->
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding SetMultiViewCountCommand}" CommandParameter="1"
                                                Content="&#xE740;" ToolTip="단일뷰로 전환"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding Players[0].HasMedia, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="48" Foreground="#60FFFFFF" HorizontalAlignment="Center"/>
                            <TextBlock Text="드래그 또는 더블클릭" Foreground="#60FFFFFF" FontSize="12" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- GridSplitter -->
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"
                              Background="{StaticResource BackgroundDarkBrush}" Cursor="SizeWE"/>

                <!-- 오른쪽 플레이어 -->
                <Border Grid.Column="2" Background="Black"
                        BorderThickness="2"
                        BorderBrush="{Binding Players[1].IsSelected, Converter={StaticResource BoolToBorderBrushConverter}}"
                        PreviewMouseLeftButtonDown="PlayerPanel_MouseDown"
                        AllowDrop="True" Drop="PlayerPanel_Drop" DragOver="PlayerPanel_DragOver"
                        Tag="1">
                    <Grid>
                        <Image Source="{Binding Players[1].VideoFrame}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="2" FontSize="24" Foreground="#80FFFFFF" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        <!-- 개별 컨트롤 바 (호버 시 표시) -->
                        <Border Style="{StaticResource MultiViewControlBarStyle}"
                                Visibility="{Binding Players[1].HasMedia, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid Style="{StaticResource MultiViewControlBarContentStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <!-- 시크바 -->
                                <Slider Grid.Row="0" Style="{StaticResource MiniSeekBarStyle}"
                                        Minimum="0" Maximum="100"
                                        Value="{Binding Players[1].SeekPosition, Mode=TwoWay}"
                                        IsMoveToPointEnabled="True"
                                        Margin="0,0,0,2"/>
                                <!-- 컨트롤 버튼 행 -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[1].SeekRelativeCommand}" CommandParameter="-5"
                                                Content="&#xED3C;" ToolTip="-5초"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[1].PlayPauseCommand}"
                                                Content="{Binding Players[1].IsPlaying, Converter={StaticResource PlayPauseIconConverter}}"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[1].StopCommand}"
                                                Content="&#xE71A;" ToolTip="정지"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[1].SeekRelativeCommand}" CommandParameter="5"
                                                Content="&#xED3D;" ToolTip="+5초"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Foreground="White" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Run Text="{Binding Players[1].PositionText}"/><Run Text=" / "/><Run Text="{Binding Players[1].DurationText}"/>
                                    </TextBlock>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[1].ToggleMuteCommand}"
                                                Content="{Binding Players[1].IsMuted, Converter={StaticResource VolumeIconConverter}}"/>
                                        <Slider Style="{StaticResource MiniVolumeSliderStyle}"
                                                Minimum="0" Maximum="100"
                                                Value="{Binding Players[1].Volume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                IsMoveToPointEnabled="True"
                                                Width="60" VerticalAlignment="Center"/>
                                        <!-- 단일뷰로 전환 -->
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding SetMultiViewCountCommand}" CommandParameter="1"
                                                Content="&#xE740;" ToolTip="단일뷰로 전환"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding Players[1].HasMedia, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="48" Foreground="#60FFFFFF" HorizontalAlignment="Center"/>
                            <TextBlock Text="드래그 또는 더블클릭" Foreground="#60FFFFFF" FontSize="12" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- 4분할 뷰 모드 (MultiViewCount == 4) -->
            <Grid x:Name="QuadViewArea"
                  Visibility="{Binding MultiViewCount, Converter={StaticResource MultiViewCountToVisibilityConverter}, ConverterParameter=4}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="150"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*" MinHeight="150"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                </Grid.ColumnDefinitions>

                <!-- 왼쪽 상단 플레이어 (1) -->
                <Border Grid.Row="0" Grid.Column="0" Background="Black"
                        BorderThickness="2"
                        BorderBrush="{Binding Players[0].IsSelected, Converter={StaticResource BoolToBorderBrushConverter}}"
                        PreviewMouseLeftButtonDown="PlayerPanel_MouseDown"
                        AllowDrop="True" Drop="PlayerPanel_Drop" DragOver="PlayerPanel_DragOver"
                        Tag="0">
                    <Grid>
                        <Image Source="{Binding Players[0].VideoFrame}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="1" FontSize="16" Foreground="#80FFFFFF" Margin="6" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding Players[0].HasMedia, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#60FFFFFF" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <!-- 컨트롤 바 (호버 시 표시) -->
                        <Border Style="{StaticResource QuadViewControlBarStyle}"
                                Visibility="{Binding Players[0].HasMedia, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid Style="{StaticResource MultiViewControlBarContentStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <!-- 시크바 -->
                                <Slider Grid.Row="0" Style="{StaticResource MiniSeekBarStyle}"
                                        Minimum="0" Maximum="100"
                                        Value="{Binding Players[0].SeekPosition, Mode=TwoWay}"
                                        IsMoveToPointEnabled="True"
                                        Margin="0,0,0,2"/>
                                <!-- 컨트롤 버튼 행 -->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[0].SeekRelativeCommand}" CommandParameter="-5"
                                                Content="&#xED3C;" ToolTip="-5초" Width="24" Height="24" Padding="2"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[0].PlayPauseCommand}"
                                                Content="{Binding Players[0].IsPlaying, Converter={StaticResource PlayPauseIconConverter}}" Width="24" Height="24" Padding="2"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[0].StopCommand}"
                                                Content="&#xE71A;" ToolTip="정지" Width="24" Height="24" Padding="2"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[0].SeekRelativeCommand}" CommandParameter="5"
                                                Content="&#xED3D;" ToolTip="+5초" Width="24" Height="24" Padding="2"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Foreground="White" FontSize="9" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Run Text="{Binding Players[0].PositionText}"/><Run Text="/"/><Run Text="{Binding Players[0].DurationText}"/>
                                    </TextBlock>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[0].ToggleMuteCommand}"
                                                Content="{Binding Players[0].IsMuted, Converter={StaticResource VolumeIconConverter}}" Width="24" Height="24" Padding="2"/>
                                        <Slider Style="{StaticResource MiniVolumeSliderStyle}"
                                                Minimum="0" Maximum="100"
                                                Value="{Binding Players[0].Volume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                IsMoveToPointEnabled="True"
                                                Width="40" VerticalAlignment="Center"/>
                                        <!-- 단일뷰로 전환 -->
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding SetMultiViewCountCommand}" CommandParameter="1"
                                                Content="&#xE740;" ToolTip="단일뷰로 전환" Width="24" Height="24" Padding="2"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- 세로 분할선 (상단) -->
                <GridSplitter Grid.Row="0" Grid.Column="1" Width="5" HorizontalAlignment="Stretch"
                              Background="{StaticResource BackgroundDarkBrush}" Cursor="SizeWE"/>

                <!-- 오른쪽 상단 플레이어 (2) -->
                <Border Grid.Row="0" Grid.Column="2" Background="Black"
                        BorderThickness="2"
                        BorderBrush="{Binding Players[1].IsSelected, Converter={StaticResource BoolToBorderBrushConverter}}"
                        PreviewMouseLeftButtonDown="PlayerPanel_MouseDown"
                        AllowDrop="True" Drop="PlayerPanel_Drop" DragOver="PlayerPanel_DragOver"
                        Tag="1">
                    <Grid>
                        <Image Source="{Binding Players[1].VideoFrame}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="2" FontSize="16" Foreground="#80FFFFFF" Margin="6" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding Players[1].HasMedia, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#60FFFFFF" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <!-- 컨트롤 바 (호버 시 표시) -->
                        <Border Style="{StaticResource QuadViewControlBarStyle}"
                                Visibility="{Binding Players[1].HasMedia, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid Style="{StaticResource MultiViewControlBarContentStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Slider Grid.Row="0" Style="{StaticResource MiniSeekBarStyle}"
                                        Minimum="0" Maximum="100"
                                        Value="{Binding Players[1].SeekPosition, Mode=TwoWay}"
                                        IsMoveToPointEnabled="True"
                                        Margin="0,0,0,2"/>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[1].SeekRelativeCommand}" CommandParameter="-5"
                                                Content="&#xED3C;" ToolTip="-5초" Width="24" Height="24" Padding="2"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[1].PlayPauseCommand}"
                                                Content="{Binding Players[1].IsPlaying, Converter={StaticResource PlayPauseIconConverter}}" Width="24" Height="24" Padding="2"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[1].StopCommand}"
                                                Content="&#xE71A;" ToolTip="정지" Width="24" Height="24" Padding="2"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[1].SeekRelativeCommand}" CommandParameter="5"
                                                Content="&#xED3D;" ToolTip="+5초" Width="24" Height="24" Padding="2"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Foreground="White" FontSize="9" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Run Text="{Binding Players[1].PositionText}"/><Run Text="/"/><Run Text="{Binding Players[1].DurationText}"/>
                                    </TextBlock>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[1].ToggleMuteCommand}"
                                                Content="{Binding Players[1].IsMuted, Converter={StaticResource VolumeIconConverter}}" Width="24" Height="24" Padding="2"/>
                                        <Slider Style="{StaticResource MiniVolumeSliderStyle}"
                                                Minimum="0" Maximum="100"
                                                Value="{Binding Players[1].Volume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                IsMoveToPointEnabled="True"
                                                Width="40" VerticalAlignment="Center"/>
                                        <!-- 단일뷰로 전환 -->
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding SetMultiViewCountCommand}" CommandParameter="1"
                                                Content="&#xE740;" ToolTip="단일뷰로 전환" Width="24" Height="24" Padding="2"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- 가로 분할선 -->
                <GridSplitter Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Height="5"
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                              Background="{StaticResource BackgroundDarkBrush}" Cursor="SizeNS"/>

                <!-- 왼쪽 하단 플레이어 (3) -->
                <Border Grid.Row="2" Grid.Column="0" Background="Black"
                        BorderThickness="2"
                        BorderBrush="{Binding Players[2].IsSelected, Converter={StaticResource BoolToBorderBrushConverter}}"
                        PreviewMouseLeftButtonDown="PlayerPanel_MouseDown"
                        AllowDrop="True" Drop="PlayerPanel_Drop" DragOver="PlayerPanel_DragOver"
                        Tag="2">
                    <Grid>
                        <Image Source="{Binding Players[2].VideoFrame}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="3" FontSize="16" Foreground="#80FFFFFF" Margin="6" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding Players[2].HasMedia, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#60FFFFFF" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <!-- 컨트롤 바 (호버 시 표시) -->
                        <Border Style="{StaticResource QuadViewControlBarStyle}"
                                Visibility="{Binding Players[2].HasMedia, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid Style="{StaticResource MultiViewControlBarContentStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Slider Grid.Row="0" Style="{StaticResource MiniSeekBarStyle}"
                                        Minimum="0" Maximum="100"
                                        Value="{Binding Players[2].SeekPosition, Mode=TwoWay}"
                                        IsMoveToPointEnabled="True"
                                        Margin="0,0,0,2"/>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[2].SeekRelativeCommand}" CommandParameter="-5"
                                                Content="&#xED3C;" ToolTip="-5초" Width="24" Height="24" Padding="2"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[2].PlayPauseCommand}"
                                                Content="{Binding Players[2].IsPlaying, Converter={StaticResource PlayPauseIconConverter}}" Width="24" Height="24" Padding="2"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[2].StopCommand}"
                                                Content="&#xE71A;" ToolTip="정지" Width="24" Height="24" Padding="2"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[2].SeekRelativeCommand}" CommandParameter="5"
                                                Content="&#xED3D;" ToolTip="+5초" Width="24" Height="24" Padding="2"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Foreground="White" FontSize="9" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Run Text="{Binding Players[2].PositionText}"/><Run Text="/"/><Run Text="{Binding Players[2].DurationText}"/>
                                    </TextBlock>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[2].ToggleMuteCommand}"
                                                Content="{Binding Players[2].IsMuted, Converter={StaticResource VolumeIconConverter}}" Width="24" Height="24" Padding="2"/>
                                        <Slider Style="{StaticResource MiniVolumeSliderStyle}"
                                                Minimum="0" Maximum="100"
                                                Value="{Binding Players[2].Volume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                IsMoveToPointEnabled="True"
                                                Width="40" VerticalAlignment="Center"/>
                                        <!-- 단일뷰로 전환 -->
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding SetMultiViewCountCommand}" CommandParameter="1"
                                                Content="&#xE740;" ToolTip="단일뷰로 전환" Width="24" Height="24" Padding="2"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- 세로 분할선 (하단) -->
                <GridSplitter Grid.Row="2" Grid.Column="1" Width="5" HorizontalAlignment="Stretch"
                              Background="{StaticResource BackgroundDarkBrush}" Cursor="SizeWE"/>

                <!-- 오른쪽 하단 플레이어 (4) -->
                <Border Grid.Row="2" Grid.Column="2" Background="Black"
                        BorderThickness="2"
                        BorderBrush="{Binding Players[3].IsSelected, Converter={StaticResource BoolToBorderBrushConverter}}"
                        PreviewMouseLeftButtonDown="PlayerPanel_MouseDown"
                        AllowDrop="True" Drop="PlayerPanel_Drop" DragOver="PlayerPanel_DragOver"
                        Tag="3">
                    <Grid>
                        <Image Source="{Binding Players[3].VideoFrame}" Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <TextBlock Text="4" FontSize="16" Foreground="#80FFFFFF" Margin="6" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding Players[3].HasMedia, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="#60FFFFFF" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <!-- 컨트롤 바 (호버 시 표시) -->
                        <Border Style="{StaticResource QuadViewControlBarStyle}"
                                Visibility="{Binding Players[3].HasMedia, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid Style="{StaticResource MultiViewControlBarContentStyle}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Slider Grid.Row="0" Style="{StaticResource MiniSeekBarStyle}"
                                        Minimum="0" Maximum="100"
                                        Value="{Binding Players[3].SeekPosition, Mode=TwoWay}"
                                        IsMoveToPointEnabled="True"
                                        Margin="0,0,0,2"/>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[3].SeekRelativeCommand}" CommandParameter="-5"
                                                Content="&#xED3C;" ToolTip="-5초" Width="24" Height="24" Padding="2"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[3].PlayPauseCommand}"
                                                Content="{Binding Players[3].IsPlaying, Converter={StaticResource PlayPauseIconConverter}}" Width="24" Height="24" Padding="2"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[3].StopCommand}"
                                                Content="&#xE71A;" ToolTip="정지" Width="24" Height="24" Padding="2"/>
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[3].SeekRelativeCommand}" CommandParameter="5"
                                                Content="&#xED3D;" ToolTip="+5초" Width="24" Height="24" Padding="2"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Foreground="White" FontSize="9" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Run Text="{Binding Players[3].PositionText}"/><Run Text="/"/><Run Text="{Binding Players[3].DurationText}"/>
                                    </TextBlock>
                                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding Players[3].ToggleMuteCommand}"
                                                Content="{Binding Players[3].IsMuted, Converter={StaticResource VolumeIconConverter}}" Width="24" Height="24" Padding="2"/>
                                        <Slider Style="{StaticResource MiniVolumeSliderStyle}"
                                                Minimum="0" Maximum="100"
                                                Value="{Binding Players[3].Volume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                IsMoveToPointEnabled="True"
                                                Width="40" VerticalAlignment="Center"/>
                                        <!-- 단일뷰로 전환 -->
                                        <Button Style="{StaticResource MiniPlayerButtonStyle}"
                                                Command="{Binding SetMultiViewCountCommand}" CommandParameter="1"
                                                Content="&#xE740;" ToolTip="단일뷰로 전환" Width="24" Height="24" Padding="2"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- 컨트롤 바 (하단) -->
        <Grid x:Name="ControlBar" Grid.Row="1"
              Background="{StaticResource ControlBarGradient}"
              Height="100"
              Visibility="{Binding ShowControls, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 시크바 - 코드에서 수동 제어 -->
            <Slider x:Name="SeekBar" Grid.Row="0" Margin="16,4"
                    Style="{StaticResource SeekBarStyle}"
                    Visibility="Visible"
                    Minimum="0"
                    Maximum="100"
                    Value="0"
                    IsMoveToPointEnabled="True"
                    ValueChanged="SeekBar_ValueChanged"
                    PreviewMouseLeftButtonUp="SeekBar_PreviewMouseLeftButtonUp"
                    PreviewMouseMove="SeekBar_PreviewMouseMove"/>

            <!-- 컨트롤 버튼 -->
            <Grid Grid.Row="1" Margin="16,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 왼쪽: 재생 컨트롤 + 시간 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- 뷰 모드 버튼들 -->
                    <Border Background="#40000000" CornerRadius="4" Padding="2" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <!-- 단일뷰일 때: 멀티뷰 전환 버튼들 표시 -->
                            <StackPanel Orientation="Horizontal"
                                        Visibility="{Binding MultiViewCount, Converter={StaticResource MultiViewCountToVisibilityConverter}, ConverterParameter=1}">
                                <Button Style="{StaticResource PlayerButtonStyle}"
                                        Command="{Binding SetMultiViewCountCommand}"
                                        CommandParameter="2"
                                        Content="&#xE746;"
                                        ToolTip="2분할 (Ctrl+2)"/>
                                <Button Style="{StaticResource PlayerButtonStyle}"
                                        Command="{Binding SetMultiViewCountCommand}"
                                        CommandParameter="4"
                                        Content="&#xE8A9;"
                                        ToolTip="4분할 (Ctrl+4)"/>
                            </StackPanel>
                            <!-- 멀티뷰일 때: 단일뷰 전환 버튼 표시 -->
                            <Button Style="{StaticResource PlayerButtonStyle}"
                                    Command="{Binding SetMultiViewCountCommand}"
                                    CommandParameter="1"
                                    Content="&#xE740;"
                                    ToolTip="단일뷰로 전환 (Ctrl+1)"
                                    Visibility="{Binding MultiViewCount, Converter={StaticResource MultiViewModeToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>

                    <!-- 재생/일시정지 토글 -->
                    <Button Style="{StaticResource PlayButtonStyle}"
                            Command="{Binding PlayPauseCommand}"
                            Content="{Binding IsPlaying, Converter={StaticResource PlayPauseIconConverter}}"
                            ToolTip="재생/일시정지 (Space)"/>

                    <!-- 정지 -->
                    <Button Style="{StaticResource PlayerButtonStyle}"
                            Command="{Binding StopCommand}"
                            Content="&#xE71A;"/>

                    <!-- 이전 5초 -->
                    <Button Style="{StaticResource PlayerButtonStyle}"
                            Command="{Binding SeekRelativeCommand}"
                            CommandParameter="-5"
                            Content="&#xED3C;"/>

                    <!-- 다음 5초 -->
                    <Button Style="{StaticResource PlayerButtonStyle}"
                            Command="{Binding SeekRelativeCommand}"
                            CommandParameter="5"
                            Content="&#xED3D;"/>

                    <!-- 시간 표시 -->
                    <TextBlock Style="{StaticResource TimeLabel}" Margin="16,0,0,0">
                        <Run Text="{Binding PositionText}"/>
                        <Run Text=" / "/>
                        <Run Text="{Binding DurationText}"/>
                    </TextBlock>

                    <!-- 멀티뷰 전체 제어 (멀티 모드에서만) -->
                    <StackPanel Orientation="Horizontal" Margin="16,0,0,0"
                                Visibility="{Binding MultiViewCount, Converter={StaticResource MultiViewModeToVisibilityConverter}}">
                        <Button Style="{StaticResource PlayerButtonStyle}"
                                Command="{Binding PlayAllPlayersCommand}"
                                Content="&#xE768;"
                                ToolTip="전체 재생"/>
                        <Button Style="{StaticResource PlayerButtonStyle}"
                                Command="{Binding PauseAllPlayersCommand}"
                                Content="&#xE769;"
                                ToolTip="전체 일시정지"/>
                        <Button Style="{StaticResource PlayerButtonStyle}"
                                Command="{Binding StopAllPlayersCommand}"
                                Content="&#xE71A;"
                                ToolTip="전체 정지"/>
                    </StackPanel>
                </StackPanel>

                <!-- 중앙: 배속 표시 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding SpeedText}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="12"
                               Visibility="{Binding PlaybackSpeed, Converter={StaticResource SpeedVisibilityConverter}}"/>
                </StackPanel>

                <!-- 오른쪽: 볼륨, 자막, 설정, 전체화면 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- A-B 반복 -->
                    <Button Style="{StaticResource PlayerButtonStyle}"
                            Command="{Binding ToggleABRepeatCommand}"
                            Content="&#xE8EE;"
                            ToolTip="구간 반복 (R)"/>

                    <!-- 자막 -->
                    <Button Style="{StaticResource PlayerButtonStyle}"
                            Command="{Binding ToggleSubtitleCommand}"
                            Content="&#xE8BD;"
                            ToolTip="자막 (V)"/>

                    <!-- 볼륨 -->
                    <Button Style="{StaticResource PlayerButtonStyle}"
                            Command="{Binding ToggleMuteCommand}"
                            Content="{Binding IsMuted, Converter={StaticResource VolumeIconConverter}}"
                            ToolTip="음소거 (M)"/>

                    <Slider Style="{StaticResource VolumeSliderStyle}"
                            Minimum="0" Maximum="100"
                            Value="{Binding Volume, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            IsMoveToPointEnabled="True"
                            VerticalAlignment="Center" Margin="4,0,8,0"/>

                    <!-- 배속 -->
                    <Button x:Name="SpeedButton" Style="{StaticResource PlayerButtonStyle}"
                            Content="&#xEC57;"
                            ToolTip="배속 조절"
                            Click="SpeedButton_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="SpeedContextMenu">
                                <MenuItem Header="0.5x" Command="{Binding PlacementTarget.DataContext.SetSpeedCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="0.5"/>
                                <MenuItem Header="0.75x" Command="{Binding PlacementTarget.DataContext.SetSpeedCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="0.75"/>
                                <MenuItem Header="1.0x (기본)" Command="{Binding PlacementTarget.DataContext.SetSpeedCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="1.0"/>
                                <MenuItem Header="1.25x" Command="{Binding PlacementTarget.DataContext.SetSpeedCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="1.25"/>
                                <MenuItem Header="1.5x" Command="{Binding PlacementTarget.DataContext.SetSpeedCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="1.5"/>
                                <MenuItem Header="2.0x" Command="{Binding PlacementTarget.DataContext.SetSpeedCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="2.0"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <!-- 스크린샷 -->
                    <Button Style="{StaticResource PlayerButtonStyle}"
                            Command="{Binding TakeScreenshotCommand}"
                            Content="&#xE722;"
                            ToolTip="스크린샷 (Ctrl+S)"/>

                    <!-- 화면 회전 -->
                    <Button x:Name="RotationButton" Style="{StaticResource PlayerButtonStyle}"
                            Content="&#xE7AD;"
                            ToolTip="화면 회전"
                            Click="RotationButton_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="RotationContextMenu">
                                <MenuItem Header="시계방향 90°" Command="{Binding PlacementTarget.DataContext.RotateScreenCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="90"/>
                                <MenuItem Header="반시계방향 90°" Command="{Binding PlacementTarget.DataContext.RotateScreenCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="-90"/>
                                <MenuItem Header="180°" Command="{Binding PlacementTarget.DataContext.RotateScreenCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="180"/>
                                <Separator/>
                                <MenuItem Header="초기화" Command="{Binding PlacementTarget.DataContext.ResetRotationCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <!-- 영상 필터 -->
                    <Button x:Name="FilterButton" Style="{StaticResource PlayerButtonStyle}"
                            Content="&#xE790;"
                            ToolTip="밝기/대비/채도"
                            Click="FilterButton_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="FilterContextMenu" MinWidth="200">
                                <MenuItem Header="밝기" IsEnabled="False"/>
                                <MenuItem>
                                    <MenuItem.Header>
                                        <Slider Minimum="-100" Maximum="100" Width="150"
                                                Value="{Binding PlacementTarget.DataContext.Brightness, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                IsMoveToPointEnabled="True"/>
                                    </MenuItem.Header>
                                </MenuItem>
                                <MenuItem Header="대비" IsEnabled="False"/>
                                <MenuItem>
                                    <MenuItem.Header>
                                        <Slider Minimum="-100" Maximum="100" Width="150"
                                                Value="{Binding PlacementTarget.DataContext.Contrast, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                IsMoveToPointEnabled="True"/>
                                    </MenuItem.Header>
                                </MenuItem>
                                <MenuItem Header="채도" IsEnabled="False"/>
                                <MenuItem>
                                    <MenuItem.Header>
                                        <Slider Minimum="-100" Maximum="100" Width="150"
                                                Value="{Binding PlacementTarget.DataContext.Saturation, Mode=TwoWay, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                IsMoveToPointEnabled="True"/>
                                    </MenuItem.Header>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="필터 초기화" Command="{Binding PlacementTarget.DataContext.ResetVideoFiltersCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <!-- 미디어 정보 -->
                    <Button Style="{StaticResource PlayerButtonStyle}"
                            Command="{Binding ShowMediaInfoCommand}"
                            Content="&#xE946;"
                            ToolTip="미디어 정보 (I)"/>

                    <!-- 최근 재생 목록 -->
                    <Button x:Name="RecentFilesButton" Style="{StaticResource PlayerButtonStyle}"
                            Content="&#xE823;"
                            ToolTip="최근 재생 목록"
                            Click="RecentFilesButton_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="RecentFilesContextMenu"
                                         ItemsSource="{Binding PlacementTarget.DataContext.RecentFiles, RelativeSource={RelativeSource Self}}">
                                <ContextMenu.ItemContainerStyle>
                                    <Style TargetType="MenuItem">
                                        <Setter Property="Header" Value="{Binding Title}"/>
                                        <Setter Property="Command" Value="{Binding PlacementTarget.DataContext.OpenRecentFileCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        <Setter Property="CommandParameter" Value="{Binding Path}"/>
                                        <Setter Property="ToolTip" Value="{Binding Path}"/>
                                    </Style>
                                </ContextMenu.ItemContainerStyle>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <!-- 북마크 -->
                    <Button x:Name="BookmarkButton" Style="{StaticResource PlayerButtonStyle}"
                            Content="&#xE728;"
                            ToolTip="북마크"
                            Click="BookmarkButton_Click">
                        <Button.ContextMenu>
                            <ContextMenu x:Name="BookmarkContextMenu">
                                <MenuItem Header="현재 위치에 북마크 추가 (B)"
                                          Command="{Binding PlacementTarget.DataContext.AddBookmarkCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                <Separator/>
                                <MenuItem Header="북마크 목록" ItemsSource="{Binding PlacementTarget.DataContext.Bookmarks, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                                    <MenuItem.ItemContainerStyle>
                                        <Style TargetType="MenuItem">
                                            <Setter Property="Header" Value="{Binding Title}"/>
                                            <Setter Property="Command" Value="{Binding PlacementTarget.DataContext.GoToBookmarkCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                            <Setter Property="CommandParameter" Value="{Binding}"/>
                                            <Setter Property="ToolTip">
                                                <Setter.Value>
                                                    <MultiBinding StringFormat="{}{0} - {1}">
                                                        <Binding Path="FileName"/>
                                                        <Binding Path="PositionText"/>
                                                    </MultiBinding>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </MenuItem.ItemContainerStyle>
                                </MenuItem>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>

                    <!-- 전체화면 -->
                    <Button Style="{StaticResource PlayerButtonStyle}"
                            Command="{Binding ToggleFullscreenCommand}"
                            Content="&#xE740;"
                            ToolTip="전체화면 (F)"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- 타이틀 바 (전체화면 시) -->
        <Grid x:Name="TitleBar" Grid.Row="0" VerticalAlignment="Top"
              Background="{StaticResource TitleBarGradient}"
              Height="40"
              Visibility="{Binding IsFullscreen, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="{Binding Title}"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="14"
                       VerticalAlignment="Center"
                       Margin="16,0"/>
        </Grid>
    </Grid>
</Window>
